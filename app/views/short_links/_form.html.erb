<%= turbo_frame_tag "short_link_form" do %>
  <div>
    <% if short_link.errors.any? %>
      <div class="alert alert-error alert-outline my-2">

        <%= short_link.errors.full_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    <% end %>

  </div>
  <%= form_with model: short_link do |f| %>
    <div class="form-control w-full py-2">
      <%= f.label :original_url, class: "input input-sm" do %>
        <%= f.url_field :original_url, required: false %>
      <% end %>

      <%= f.submit "Shorten", class: "btn btn-success btn-sm" %>
    </div>
  <% end %>
<% end %>